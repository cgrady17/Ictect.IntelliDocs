<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Ictect IntelliDocs</title>
    @Styles.Render("~/Content/IntelliDocsCSS")
    @Scripts.Render("~/Scripts/IntelliDocsJS")
</head>
<body>
<div id="header-container">
    <header>
        <a href="@Url.Content("~")" id="header-home">IntelliDocs</a>
        <input type="text" id="header-search" placeholder="Search anything..."/>
        <div id="header-actions">
            <a href="#" id="header-upload"><span class="glyphicon glyphicon-cloud-upload"></span>Upload</a>
        </div>
        <ul id="header-settings">
            <li>
                <a href="#" id="header-settings-btn"><span class="glyphicon glyphicon-cog"></span></a>
            </li>
        </ul>
    </header>
</div>
@{ Html.RenderPartial("_BrowserSidebar");}
<div id="content-container">
    @RenderBody()
</div>
<div id="footer-container">
    @* We may not need a footer *@
</div>

<script>
    IntelliDocs.baseUrl = "@($"{Request.Url.Scheme}://{Request.Url.Authority}{Url.Content("~")}")";
</script>
</body>
</html>