@model Ictect.IntelliDocs.Web.Models.Directory
<script>
    $(function () {
        $("#dir-actions [data-action='cancel']").click(function() {
            $("#ajax-modal").modal("hide");
        });
        $("#dir-actions [data-action='delete']").click(function() {
            IntelliDocs.deleteDirectory(@Model.dirId);
        });
    });
</script>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">Confirm @Model.dirName's Deletion</h4>
</div>
<div class="modal-body">
    <h1>Are you sure you want to <strong>Delete</strong>?!</h1>
    <h3>This will delete <strong>all contents</strong> of the folder.</h3>
    <br />
    <div class="row" id="dir-actions">
        <div class="col-md-6">
            <button type="button" class="btn btn-lg btn-primary" data-action="cancel"><i class="fa fa-undo"></i> No, Don't!</button>
        </div>
        <div class="col-md-6">
            <button type="button" class="btn btn-lg btn-danger" data-action="delete"><i class="fa fa-trash"></i> Yes, Delete it All!</button>
        </div>

    </div>
    <div id="dir-actions-result" class="content-container"></div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
</div>
